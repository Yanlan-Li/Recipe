<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recipe">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Recipe"
        android:usesCleartextTraffic="true">
        <activity android:name=".user.view.RegisterActivity"></activity>
        <activity android:name=".user.view.CollectActivity" />
        <activity android:name=".user.view.UserInfoActivity" />
        <activity android:name=".user.view.LoginActivity" /> <!-- <activity android:name=".RegisterActivity"></activity> -->
        <!-- <activity android:name=".user.UserInforActivity" /> -->
        <!-- <activity android:name=".LoginActivity" /> -->
        <activity android:name=".detail.DetailActivity" />
        <activity android:name=".search.view.SearchActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>